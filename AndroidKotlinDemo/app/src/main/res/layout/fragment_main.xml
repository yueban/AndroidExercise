<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

    <Button
            android:id="@+id/goto_end_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto_EndFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/goto_lifecycle_activity_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto_LifecycleActivity1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goto_end_fragment"/>

    <Button
            android:id="@+id/goto_lifecycle_activity_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto_LifecycleActivity2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goto_lifecycle_activity_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
