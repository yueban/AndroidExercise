<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".navigation.NavigationFragment1">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigation fragment 1"
        android:transitionName="message_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/goto_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto next"
            android:transitionName="goto_next"/>

        <Button
            android:id="@+id/goto_nested_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto_nested_graph"/>

        <Button
            android:id="@+id/goto_include_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goto_include_graph"/>
    </LinearLayout>
</FrameLayout>